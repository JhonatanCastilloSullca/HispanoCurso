<Layout>
	<BigSection id="cursos" class="max-w-7xl">
		<div class="container py-4 mt-10 mx-auto">
			<div class="grid grid-cols-1 mt-5 lg:grid-cols-2 gap-8 lg:items-top">
				<div class="prose max-w-none md:px-10 px-12">
					<h2
						slot="heading-title"
						class="font-black text-grayDark dark:text-white h2 my-4 text-left"
					>
						{cursoSeleccionado.titulo}
					</h2>
					<div
						slot="heading-content"
						class="text-justify text-grayMedium dark:text-white"
					>
						<p>{cursoSeleccionado.descripcion}</p>
						<ul class="py-4">
							{
								cursoSeleccionado.beneficios.map(
									(beneficio, index) => (
										<li class="text-grayMedium dark:text-white font-medium flex gap-4">
											▪ {beneficio.titulo}
										</li>
									),
								)
							}
						</ul>
						<div class="mt-8">
							<a
								class="bg-brownDark dark:bg-yellowSecondary rounded-lg px-4 py-2 text-white font-semibold"
								href="/contactez"
								target="_self"
								rel=""
							>
								Inscrivez- vous
							</a>
						</div>
					</div>
				</div>
				<div class="flex justify-center">
					{
						cursoSeleccionado.imagen === "si" ? (
							<div class="w-full h-[70vh] object-cover">
								<CarouselComponent
									images={cursoSeleccionado.imagenes.map(
										(img) => img.imagen,
									)}
									client:load
								/>
							</div>
						) : (
							<CarouselComponentVideo
								images={cursoSeleccionado.imagenes}
								client:load
							/>
						)
					}
				</div>
			</div>
		</div>
	</BigSection>
	<BigSection class="max-w-7xl">
		<Testimonios items={carouselData} client:load />
	</BigSection>
</Layout>

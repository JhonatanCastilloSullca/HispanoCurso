---
// Definir propiedades din√°micas
const { items } = Astro.props;
---

<div
    class="flex flex-col items-center md:items-start text-center md:text-left space-y-6 max-w-lg gap-x-12"
>
    {
        items.map((section) => (
            <div class="">
                <h3 class="font-semibold text-3xl text-grayDark dark:text-white">
                    {section.titulo}
                </h3>
                <ol class="relative border-l border-gray-200 dark:border-white">
                    {section.secciones.map((item) => (
                        <li class="mb-10 ms-4">
                            <div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -left-1.5 border border-white dark:border-white dark:bg-white/90" />
                            <time class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-white">
                                {item.time}
                            </time>
                            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
                                {item.title}
                            </h3>
                            <p class="text-base font-normal text-gray-500 dark:text-gray-400">
                                {item.description}
                            </p>
                        </li>
                    ))}
                </ol>
            </div>
        ))
    }
</div>
